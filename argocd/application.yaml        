apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: web-api
spec:
  source:
    repoURL: https://github.com/your-username/your-manifest-repo.git
    targetRevision: web-api
    path: .
  destination:
    server: https://kubernetes.default.svc
    namespace: wizsuite-prod
  project: default
  syncPolicy:
    automated:
      prune: true
      selfHeal: true

